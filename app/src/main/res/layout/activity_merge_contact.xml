<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x13"
        android:background="@color/some_white_et" />

    <TextView
        android:id="@+id/tvMergeContact"
        style="@style/setting_contact_style"
        android:text="0组联系人资料完全重复" />

    <TextView
        android:id="@+id/tvMergeName"
        style="@style/setting_contact_style"
        android:text="0组联系人资料姓名重复" />

    <TextView
        android:id="@+id/tvMergeNumber"
        style="@style/setting_contact_style"
        android:text="0组联系人资料号码重复" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x15"
        android:background="@color/some_white_et" />

    <TextView
        android:id="@+id/tvMergeByHand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:paddingBottom="@dimen/x12"
        android:paddingTop="@dimen/x12"
        android:text="手动合并"
        android:textSize="15sp"
        android:textColor="@color/blue" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/some_white_et" />
</LinearLayout>