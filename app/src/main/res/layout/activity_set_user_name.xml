<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.goockr.smsantilost.views.activities.more.SetUserNameActivity">

    <RelativeLayout
        android:layout_marginTop="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.goockr.smsantilost.graphics.CleanableEditText
            android:id="@+id/et_InputUserName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:background="#fff"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:paddingTop="@dimen/x5"
            android:paddingBottom="@dimen/x5"
            android:hint="请输入修改的名称"
            android:drawableRight="@mipmap/btn_del"
            android:textSize="14sp"/>
    </RelativeLayout>

</LinearLayout>
