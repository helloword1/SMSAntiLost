<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_ll_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x55"
        android:orientation="horizontal"
        android:background="#fff"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_friends_icon"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:src="@mipmap/icon_add_friends" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_friends_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="新的好友"
                android:paddingLeft="@dimen/x10"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_friends_num"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="新的好友"
                android:paddingLeft="@dimen/x10"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <include
        layout="@layout/line_gray_margin"/>

</LinearLayout>