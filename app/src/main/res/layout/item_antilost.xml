<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/x5"
    android:paddingRight="@dimen/x8"
    android:paddingTop="@dimen/x5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tv_stroke_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/x5"
        android:paddingBottom="@dimen/x5"
        android:paddingRight="@dimen/x5"
        android:layout_marginLeft="@dimen/x12"
        tools:showIn="@layout/fragment_antilost">

        <ImageView
            android:id="@+id/antilost_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/x50"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5">

            <TextView
                android:id="@+id/antilost_item_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="钥匙"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="距离最近  "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/antilost_item_lastDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刚刚"
                    android:textColor="#999999"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/x6"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/antilost_item_connect"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x20"
                android:gravity="center"
                android:text="已连接"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x3"
                android:src="@mipmap/icon_right" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>