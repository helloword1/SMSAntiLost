<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:ios="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x12"
        android:paddingRight="@dimen/x12">

        <ImageView
            android:id="@+id/ivCreateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_contact_phone"
            tools:ignore="ContentDescription" />

        <com.goockr.smsantilost.graphics.CleanableEditText
            android:id="@+id/etPhoneName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:background="@drawable/tv_stroke_bottom"
            android:hint="@string/inputPhone"
            android:inputType="number"
            android:maxLength="15"
            android:paddingBottom="@dimen/x18"
            android:paddingTop="@dimen/x18"
            android:textColor="@color/textColor"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnDel"
        android:layout_width="@dimen/x72"
        android:layout_height="match_parent"
        android:background="#ec120a"
        android:clickable="true"
        android:text="@string/delete"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>
