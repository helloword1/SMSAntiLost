<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvRightDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/x3"
        android:paddingTop="@dimen/x8"
        android:text="2017年9月2日 23：00"
        android:textColor="@color/msmTextColorGray"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/x5"
        android:layout_marginLeft="@dimen/x12"
        android:layout_marginRight="@dimen/x12"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x12"
            android:layout_marginRight="@dimen/x5">

            <ImageView
                android:id="@+id/ivRightSendIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x12"
                android:visibility="gone"
                android:src="@mipmap/icon_notice" />

            <ProgressBar
                android:id="@+id/ivRightProgress"
                android:layout_width="@dimen/x22"
                android:layout_height="@dimen/x22"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/x12"/>
        </FrameLayout>


        <TextView
            android:id="@+id/tvRightContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_box_right"
            android:gravity="right|center_vertical"
            android:text="123123"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>