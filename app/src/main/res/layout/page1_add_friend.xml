<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <include layout="@layout/logo_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30">

        <ImageView
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:src="@mipmap/icon_phone"/>

        <com.goockr.smsantilost.graphics.CleanableEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/etNewPhone"
            android:background="@null"
            android:drawableRight="@mipmap/btn_del"
            android:hint="@string/inputOtherPhone"
            android:layout_marginLeft="@dimen/x10"
            android:textSize="15sp"/>

    </LinearLayout>

    <include
        layout="@layout/line_gray_margin"/>

    <TextView
        android:layout_marginTop="@dimen/x40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/inviteFriendsDownLoad"/>

    <TextView
        android:layout_marginTop="@dimen/x10"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/x30"
        android:gravity="center"
        android:id="@+id/inviteMyFamily"
        android:textColor="#fff"
        android:text="@string/inviteFriendsDownLoad"
        android:background="@drawable/shape_blue"/>

</LinearLayout>