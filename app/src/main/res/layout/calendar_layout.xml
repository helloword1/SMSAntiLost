<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x8"
            android:scaleType="fitCenter"
            android:src="@mipmap/btn_upper_page_calendar" />

        <TextView
            android:id="@+id/cTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x8"
            android:layout_marginStart="@dimen/x8"
            android:gravity="center"
            android:paddingBottom="@dimen/x8"
            android:paddingTop="@dimen/x8"
            android:text="2016/10/10"
            android:textColor="@color/textColor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/cBack1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x8"
            android:scaleType="fitCenter"
            android:src="@mipmap/btn_next_page_calendar" />

    </LinearLayout>

    <include layout="@layout/line_gray_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x8"
        android:paddingTop="@dimen/x12">

        <TextView
            style="@style/weekStyle"
            android:text="S" />

        <TextView
            style="@style/weekStyle"
            android:text="M" />

        <TextView
            style="@style/weekStyle"
            android:text="T" />

        <TextView
            style="@style/weekStyle"
            android:text="W" />

        <TextView
            style="@style/weekStyle"
            android:text="T" />

        <TextView
            style="@style/weekStyle"
            android:text="F" />

        <TextView
            style="@style/weekStyle"
            android:text="S" />
    </LinearLayout>

    <com.goockr.smsantilost.graphics.calendarview.CalendarDateView
        android:id="@+id/calendarDateView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />
</LinearLayout>