<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    android:orientation="vertical"
    tools:context="com.goockr.smsantilost.views.activities.antilost.SetNameActivity">

    <com.goockr.smsantilost.graphics.CleanableEditText
        android:id="@+id/et_InputName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginTop="@dimen/x10"
        android:background="#fff"
        android:drawableRight="@mipmap/btn_del"
        android:hint="@string/pleaseChangeInputName"
        android:paddingBottom="@dimen/x5"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:paddingTop="@dimen/x5"
        android:textSize="14sp" />
</LinearLayout>
