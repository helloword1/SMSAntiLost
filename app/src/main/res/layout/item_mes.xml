<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivMes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x12"
        android:layout_marginTop="@dimen/x12"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/mesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x12"
        android:layout_marginTop="@dimen/x18"
        android:layout_toRightOf="@+id/ivMes"
        android:text="@string/SystemAlert"
        android:textColor="@color/blue"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/mesContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ivMes"
        android:layout_below="@id/mesTitle"
        android:layout_marginLeft="@dimen/x12"
        android:layout_marginTop="@dimen/x3"
        android:layout_toRightOf="@+id/ivMes"
        android:gravity="bottom"
        android:text="系统更新升级！！"
        android:textColor="@color/textTitleColor"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/mesDetailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mesContent"
        android:layout_marginLeft="@dimen/x12"
        android:layout_marginTop="@dimen/x5"
        android:layout_toRightOf="@+id/ivMes"
        android:text="1234456"
        android:textColor="@color/msmTextColorGray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/mesDateStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/mesTitle"
        android:layout_marginLeft="@dimen/x12"
        android:layout_marginRight="@dimen/x12"
        android:layout_toRightOf="@+id/mesTitle"
        android:gravity="right"
        android:text="8天前"
        android:textColor="@color/msmTextColorGray"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@id/mesDetailText"
        android:layout_marginLeft="@dimen/x12"
        android:layout_marginRight="@dimen/x12"
        android:layout_marginTop="@dimen/x12"
        android:background="@color/linetColor" />
</RelativeLayout>