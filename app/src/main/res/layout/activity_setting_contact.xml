<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x15"
        android:background="@color/some_white_et" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/x8"
        android:paddingLeft="@dimen/x14"
        android:visibility="gone"
        android:paddingRight="@dimen/x8"
        android:paddingTop="@dimen/x8">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="显示SIM卡的联系人"
            android:textColor="@color/textColor"
            android:textSize="14sp" />

        <com.suke.widget.SwitchButton
            android:id="@+id/btn_ShowContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:sb_checked_color="@color/colorPrimary" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x18"
        android:visibility="gone"
        android:background="@color/some_white_et" />

    <TextView
        android:id="@+id/tvCopyContact"
        style="@style/setting_contact_style"
        android:visibility="gone"
        android:text="复制SIM卡的联系人到手机" />

    <TextView
        android:id="@+id/tvDeleteContact"
        style="@style/setting_contact_style"
        android:text="@string/BatchDeletingContacts" />

    <TextView
        android:id="@+id/tvUnionContact"
        style="@style/setting_contact_style"
        android:text="@string/MergeDuplicateContacts" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/some_white_et" />

</LinearLayout>