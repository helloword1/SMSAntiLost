<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/x10"
    android:paddingRight="@dimen/x10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/SoundName"
            style="@style/index_out_text_style"
            android:text="@string/defaultSound"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/SoundSelected"
            style="@style/setting_icon_sytle"
            android:src="@mipmap/icon_check"/>
    </LinearLayout>

    <include
        layout="@layout/line_gray_margin"/>

</LinearLayout>

