<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundGray"
    tools:context="com.goockr.smsantilost.views.activities.antilost.TwoWayAntiActivity">

    <LinearLayout
        android:id="@+id/ll_OpenAnti"
        android:layout_marginTop="@dimen/x10"
        style="@style/setting_ll_style">

        <TextView
            style="@style/index_out_text_style"
            android:text="双向防丢"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <com.suke.widget.SwitchButton
            android:id="@+id/btn_OpenAnti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:sb_checked_color="@color/colorPrimary"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:text="开启后，可让设备通过“双击”功能按键，来让手机响铃。"
        android:padding="@dimen/x10"
        android:gravity="center_vertical"
        android:textSize="12sp"/>

    <LinearLayout
        android:id="@+id/ll_PhoneSound1"
        style="@style/setting_ll_style">

        <TextView
            style="@style/index_out_text_style"
            android:text="手机提醒声音"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_PhoneSound1"
            style="@style/setting_text_small_style"
            android:layout_height="wrap_content"
            android:text="默认"/>

        <ImageView
            style="@style/setting_icon_sytle"
            android:src="@mipmap/icon_right"/>

    </LinearLayout>

    <include
        layout="@layout/line_gray_margin"/>

    <LinearLayout
        android:id="@+id/ll_SoundTotal1"
        style="@style/setting_ll_style">

        <TextView
            android:text="手机提醒时长"
            style="@style/index_out_text_style"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_SoundTotal1"
            style="@style/setting_text_small_style"
            android:layout_width="wrap_content"
            android:text="5s"/>

        <ImageView
            style="@style/setting_icon_sytle"
            android:src="@mipmap/icon_right"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:text="声音与震动"
        android:padding="@dimen/x10"
        android:gravity="center_vertical"
        android:textSize="12sp"/>

    <LinearLayout
        android:id="@+id/ll_SoundAndVibration"
        style="@style/setting_ll_style">

        <TextView
            android:text="小"
            style="@style/index_out_text_style"/>

        <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxHeight="@dimen/x2"
            android:progressDrawable="@drawable/style_seekbar"/>

        <TextView
            android:text="大"
            style="@style/index_out_text_style"/>

    </LinearLayout>

    <include
        layout="@layout/line_gray_margin"/>

    <LinearLayout
        android:id="@+id/ll_Vibration"
        style="@style/setting_ll_style">

        <TextView
            style="@style/index_out_text_style"
            android:text="震动"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <com.suke.widget.SwitchButton
            android:id="@+id/btn_OpenVibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:sb_checked_color="@color/colorPrimary"/>

    </LinearLayout>

</LinearLayout>
